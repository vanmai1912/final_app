
<div class=" body container">
      
        <div class="row text-center">
          <div class="col">
            
          </div>
          <div class="col ">
            <h2 style="color: blue; font-size: 35px; margin-top: 20%">Fotobook Login</h2>
            <div class="logo-fab">
              <div class="logo-item">
                <i class="fab fa-google"></i>
              </div>
              <div class="logo-item">
                <i class="fab fa-facebook"></i>
              </div>
              <div class="logo-item">
                <i class="fab fa-twitter"></i>
              </div>
              
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "login" }) do |f| %>
              <div class="logo-item" >
                <i class="fa-solid fa-circle-user" style="margin:0 0 20% 0"></i>
              </div>
              <div class="field ">
               
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "user-login" %>
                </div>

              <div class="field ">
              
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "user-login" %>
              </div>

              <div class="actions" style="margin: 25px 0;">
                <%= f.submit "Login", class: "btn btn-primary" %>
              </div>

              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), style: "  text-decoration: none;" %><br />
              <% end %>

            <% end %>

            <div style="margin-top: 20px;">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Create an account", new_registration_path(resource_name), style: "  text-decoration: none;" %><br />
            <% end %>          
            </div>



           
          
            
          </div>
          <div class="col">
            
        </div>
        </div>
       
      <div style="height: 100px">

      </div>
       
      
    </div>


