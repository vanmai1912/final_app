
<div class="row text-center">
<div class="col">
  
</div>
<div class="col ">
  <h2 style="color: #1877f2; font-size: 35px; margin-top: 20%">Fotobook Signup</h2>
  <div class="logo-fab">
    <div class="logo-item">
      <i class="fab fa-google"></i>
    </div>
    <div class="logo-item">
      <i class="fab fa-facebook"></i>
    </div>
    <div class="logo-item">
      <i class="fab fa-twitter"></i>
    </div>
    
  </div>

  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { class: "login" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field text-start ">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email", style: "width: 100%; height: 30px" %>
    </div>
    <div class="field text-start">
      <%= f.label :firstname %><br />
      <%= f.text_field :firstname, autofocus: true, placeholder: "First name", style: "width: 100%; height: 30px"  %>
    </div>
    <div class="field text-start">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname, autofocus: true, placeholder: "Last name", style: "width: 100%; height: 30px"  %>
    </div>
  
    <div class="field text-start">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", style: "width: 100%; height: 30px"  %>
    </div>
  
    <div class="field text-start">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", style: "width: 100%; height: 30px"  %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", style: "margin-top: 20px; color: white ; background-color: #1877f2; font-size:15px; border: none"  %>
    </div>
  <% end %>
</div>
<div class="col">
  
</div>
</div>




